@model dynamic

@{
    ViewBag.Title = "Observable";
}

<h2>Observable</h2>

<h3>Result</h3>
<div class="well">
    <fieldset>
        <legend>Person Info</legend>
        <p>
            <label>Name: </label><input type="text" data-bind="value: personName" />
            <label>Age: </label><input type="number" max="120" min="1" data-bind="value: personAge"/>
        </p>
    </fieldset>
    <p>The person's name is <strong data-bind="text: personName"></strong></p>
    <p><strong data-bind="text:personName"></strong> is <strong data-bind="text: personAge"></strong> years old</p>
</div>

<script>
    var myViewModel = {
        personName: ko.observable('Bob'),
        personAge: ko.observable(12)
    };

    ko.applyBindings(myViewModel);
</script>

